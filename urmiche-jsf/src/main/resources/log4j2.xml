<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="tnt-poc">

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>

        <Logger name="com.autentia" level="debug"/>
        <Logger name="org.springframework" level="trace"/>
    </Loggers>

</Configuration>
